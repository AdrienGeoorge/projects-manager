{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Recrutements{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="flex flex-row items-center gap-2">
        <div class="text-3xl font-poppins-medium">RECRUTEMENTS</div>
        {% if app.user %}
            <a href="{{ path('admin_job_home') }}" class="bg-black text-white dark:bg-white dark:text-black rounded-full
                               flex items-center justify-center p-1.5">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                     stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
                </svg>
            </a>
        {% endif %}
    </div>
    <div class="text-lg font-poppins-light leading-5">
        Veuillez sélectionner le poste qui vous correspond et prendre en compte les conditions avant de postuler
    </div>
    {% for category in jobCategories %}
        <div class="my-4">
            {% if category.jobs|length > 0 %}
                <div class="text-2xl font-poppins-medium">{{ category.name }}</div>
                <div class="flex flex-row flex-wrap md:flex-nowrap gap-4 mt-2">
                    {% for job in category.jobs|filter(value => (not app.user and value.open) or app.user) %}
                        <a href="#" class="relative bg-box dark:bg-box-dark p-3 rounded-3xl
                                           flex flex-row gap-3 items-center w-full md:w-100">
                            <img src="{{ asset(job_directory ~ job.image) }}" alt="{{ job.name }}"
                                 class="w-16 h-full rounded-xl object-cover image-pixelated">
                            <div class="job-infos flex-1">
                                <div class="flex flex-row items-center justify-between mb-1 gap-1.5">
                                    <div class="text-lg font-poppins-medium">{{ job.name }}</div>
                                    <div class="job-state rounded-full px-2 text-white
                                         {{ job.isOpen ? 'bg-green-500' : 'bg-red-700' }}">
                                        {{ job.isOpen ? 'Ouvert' : 'Fermé' }}
                                    </div>
                                </div>
                                <div class="font-poppins-light">{{ job.smallDescription }}</div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    {% endfor %}
{% endblock %}
