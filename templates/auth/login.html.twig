{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur {{ app_name }}{% endblock %}

{% block body %}
    <div class="bg-box lg:bg-body dark:bg-box-dark dark:lg:bg-body-dark flex items-center justify-center h-full">
        <form method="post"
              class="text-gray-900 flex justify-center sm:items-center
                dark:bg-body-dark dark:text-white w-full lg:w-10/12 xl:w-9/12">
            <div class="w-full max-w-screen-lg m-0 lg:m-10 lg:h-auto bg-box lg:shadow lg:rounded-5xl overflow-hidden flex justify-center lg:flex-1 flex-none
                   dark:bg-box-dark">
                <div class="lg:w-3/6 xl:w-6/12 p-6 sm:px-8 lg:py-5 flex lg:flex-none items-center">
                    <div class="flex flex-col px-10">
                        <h1 class="mt-12 mb-5 text-xl font-poppins-semi-bold">
                            Bienvenue sur <span class="text-amber-400">{{ app_name }}</span>
                        </h1>
                        <h1 class="text-3xl font-playfair">
                            Connectez-vous
                        </h1>
                        <div class="w-full flex-1 mt-5">
                            {% if error %}
                                <div class="relative block w-full py-4 px-6 mb-4 text-base leading-5 text-white bg-red-400 rounded-full opacity-100 font-regular">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}
                            <div>
                                <input type="email" id="inputEmail" name="email" aria-label="Adresse mail"
                                       class="w-full px-8 py-4 rounded-2xl font-medium bg-gray-100 border border-gray-200
                                          placeholder-gray-400 text-sm
                                          focus:outline-none focus:border-gray-400 focus:bg-white
                                          dark:bg-transparent dark:border-gray-300 dark:focus:bg-transparent
                                          dark:placeholder-gray-300"
                                       placeholder="Adresse mail" autocomplete="email" value="{{ last_username }}"
                                       required/>
                            </div>
                            <div>
                                <input type="password" id="inputPassword" name="password" aria-label="Mot de passe"
                                       class="w-full px-8 py-4 rounded-2xl font-medium bg-gray-100 border border-gray-200
                                          placeholder-gray-400 text-sm
                                          focus:outline-none focus:border-gray-400 focus:bg-white mt-3
                                          dark:bg-transparent dark:border-gray-300 dark:focus:bg-transparent
                                          dark:placeholder-gray-300"
                                       placeholder="Mot de passe" autocomplete="current-password" required/>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button
                                    class="mt-5 tracking-wide bg-indigo-500 text-gray-100 w-full py-4 rounded-full
                                    flex items-center justify-center hover:bg-indigo-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                                Se connecter
                            </button>
                            <p class="mt-6 mb-10 text-sm text-gray-600 text-center dark:text-gray-200">
                                Vous n'avez pas encore de compte? Cr√©ez-le
                                <a href="{{ path('auth_register') }}" class="border-b border-gray-500 border-dotted">
                                    en cliquant ici
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="flex-1 text-center hidden lg:flex">
                    <div class="w-full bg-contain bg-center bg-no-repeat mr-14"
                         style="background-image: url({{ asset('build/images/index.png') }});">
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
