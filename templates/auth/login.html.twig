{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur {{ app_name }}{% endblock %}

{% block body %}
    <form method="post"
          class="min-h-screen bg-body text-gray-900 flex justify-center sm:items-center
                dark:bg-body-dark dark:text-white">
        <div class="max-w-screen-xl m-0 sm:m-10 bg-box shadow sm:rounded-3xl overflow-hidden flex justify-center flex-1
                   dark:bg-box-dark">
            <div class="lg:w-1/2 xl:w-5/12 p-6 sm:p-12">
                <div>
                    <div class="bg-logo-dark dark:bg-logo-white w-48 h-16 mx-auto bg-cover bg-no-repeat bg-center"></div>
                </div>
                <div class="mt-6 flex flex-col items-center">
                    <h1 class="text-2xl xl:text-3xl font-extrabold text-center">
                        Bienvenue sur {{ app_name }}
                    </h1>
                    <h1 class="xl:text-xl text-center">
                        Connectez-vous à votre compte
                    </h1>
                    <div class="w-full flex-1 mt-5">
                        {% if error %}
                            <div class="relative block w-full p-4 mb-4 text-base leading-5 text-white bg-red-400 rounded-lg opacity-100 font-regular">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <div class="mx-auto max-w-xs">
                            <input type="email" id="inputEmail" name="email" aria-label="Adresse mail"
                                   class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200
                                          placeholder-gray-400 text-sm
                                          focus:outline-none focus:border-gray-400 focus:bg-white
                                          dark:bg-transparent dark:border-gray-300 dark:focus:bg-transparent
                                          dark:placeholder-gray-300"
                                   placeholder="Adresse mail" autocomplete="email" value="{{ last_username }}"
                                   required autofocus/>
                            <input type="password" id="inputPassword" name="password" aria-label="Mot de passe"
                                   class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200
                                          placeholder-gray-400 text-sm
                                          focus:outline-none focus:border-gray-400 focus:bg-white mt-3
                                          dark:bg-transparent dark:border-gray-300 dark:focus:bg-transparent
                                          dark:placeholder-gray-300"
                                   placeholder="Mot de passe" autocomplete="current-password" required/>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button
                                    class="mt-5 tracking-wide bg-indigo-500 text-gray-100 w-full py-4 rounded-lg
                                    flex items-center justify-center hover:bg-indigo-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                                Se connecter
                            </button>
                            <p class="mt-6 text-sm text-gray-600 text-center dark:text-gray-200">
                                Vous n'avez pas de compte? Créez-le
                                <a href="{{ path('auth_register') }}" class="border-b border-gray-500 border-dotted">
                                    en cliquant ici
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex-1 text-center hidden lg:flex">
                <div class="w-full bg-cover bg-center bg-no-repeat"
                     style="background-image: url({{ asset('build/images/index.png') }});">
                </div>
            </div>
        </div>
    </form>
{% endblock %}
