{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Actualités{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="flex flex-col gap-4">
        <div class="titles ml-11 mt-2">
            <div class="text-3xl font-poppins-medium">ÉVÉNEMENTS</div>
            <div class="text-lg font-poppins-light leading-5">Retrouvez tous nos événements en cours et passés</div>
        </div>
        <div class="events-slider px-10 relative">
            <img src="{{ asset('build/icons/left.svg') }}" class="events-left-slider cursor-pointer absolute top-24-1/2 left-0"
                 alt="Left">
            <img src="{{ asset('build/icons/right.svg') }}"
                 class="events-right-slider cursor-pointer absolute top-24-1/2 right-0" alt="Right">
            <div class="events-list flex gap-4 overflow-x-scroll scroll-smooth overflow-y-hidden no-scrollbar">
                {% for article in articles %}
                    <a href="#" class="event flex-none w-64">
                        <div class="bg-box dark:bg-box-dark rounded-4xl p-2">
                            <div class="event-header w-full h-60 rounded-3xl bg-cover"
                                 style="background-image:url({{ asset(article_directory ~ article.header) }})"></div>
                        </div>
                        <div class="mt-3 px-3">
                            <div class="font-poppins-medium">{{ article.title }}</div>
                            <div class="font-roboto-thin text-sm">{{ article.description }}</div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>

        <div class="titles ml-11 mt-2">
            <div class="text-3xl font-poppins-medium">NOUVEAUTÉS</div>
            <div class="text-lg font-poppins-light leading-5">Retrouvez toutes nos nouveautés ici</div>
        </div>
        <div class="news-slider px-10 relative">
            <img src="{{ asset('build/icons/left.svg') }}" class="news-left-slider cursor-pointer absolute top-24-1/2 left-0"
                 alt="Left">
            <img src="{{ asset('build/icons/right.svg') }}"
                 class="news-right-slider cursor-pointer absolute top-24-1/2 right-0" alt="Right">
            <div class="news-list flex gap-4 overflow-x-scroll scroll-smooth overflow-y-hidden no-scrollbar">
                {% for article in articles %}
                    <a href="#" class="new flex-none w-64">
                        <div class="bg-box dark:bg-box-dark rounded-4xl p-2">
                            <div class="new-header w-full h-60 rounded-3xl bg-cover"
                                 style="background-image:url({{ asset(article_directory ~ article.header) }})"></div>
                        </div>
                        <div class="mt-3 px-3">
                            <div class="font-poppins-medium">{{ article.title }}</div>
                            <div class="font-roboto-thin text-sm">{{ article.description }}</div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}